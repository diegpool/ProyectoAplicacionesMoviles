<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diego.myapplicationx.FragUno"
    android:background="@drawable/hoja"
    android:id="@+id/frag1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/Horizontal10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>
    <android.support.constraint.Guideline
        android:id="@+id/Horizontal30"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/Vertical20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>
    <android.support.constraint.Guideline
        android:id="@+id/Vertical80"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

        <android.support.constraint.Guideline
            android:id="@+id/HorizontalFinal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>
        <android.support.constraint.Guideline
            android:id="@+id/Horizontal65"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65"/>
        <android.support.constraint.Guideline
            android:id="@+id/Horizontal40"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>
        <android.support.constraint.Guideline
            android:id="@+id/HorizontalInicial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"
            tools:layout_editor_absoluteY="107dp"
            tools:layout_editor_absoluteX="0dp" />
        <android.support.constraint.Guideline
            android:id="@+id/Horizontal35"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>
        <android.support.constraint.Guideline
            android:id="@+id/Horizontal50"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>
        <android.support.constraint.Guideline
            android:id="@+id/VerticalFinal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <android.support.constraint.Guideline
            android:id="@+id/Vertical50"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
        <android.support.constraint.Guideline
            android:id="@+id/VerticalInicio"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/pieChart"
            app:layout_constraintRight_toLeftOf="@+id/VerticalFinal"
            app:layout_constraintBottom_toTopOf="@+id/Horizontal30"
            app:layout_constraintLeft_toLeftOf="@+id/VerticalInicio"
            app:layout_constraintTop_toTopOf="@+id/Horizontal10" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/HorizontalFinal"
            app:layout_constraintRight_toLeftOf="@+id/Vertical80"
            app:layout_constraintLeft_toLeftOf="@+id/Vertical20"
            app:layout_constraintTop_toTopOf="@+id/Horizontal50"
            android:background="@drawable/asistenciaf"
            android:paddingTop="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp">
            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/gridasis" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
